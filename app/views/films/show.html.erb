<p>
  <%= image_tag @film.image.url(:medium) %>
</p>

<p>
  <strong>Title:</strong>
  <%= @film.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @film.description %>
</p>

<p>
  <div class="star" data-score=<%= @avg_review %>>
  <em><%= "#{@reviews.length} reviews" %></em>
    
  </div>
</p>

<p>
  <strong>Movie length:</strong>
  <%= @film.movie_length %>
</p>

<p>
  <strong>Director:</strong>
  <%= @film.director %>
</p>

<p>
  <strong>Rating:</strong>
  <%= @film.rating %>
</p>

<%= link_to "Write a review", new_film_review_path(@film) %>

<% if @reviews.blank? %>
  <p>be the first to write a review!</p>
<% else %>
  <% @reviews.each do |i| %>
    <div class="star" data-score= <%= i.rating %> ></div>
    <p><%= i.comment %></p>
  <% end %>
<% end %>

<%= link_to 'Edit', edit_film_path(@film) %> |
<%= link_to 'Back', root_path %>

<script type="text/javascript">
  $('.star').raty({
    path: '/assets/',
    readOnly: true,
    score: function(){
      return $(this).attr('data-score');
    }
    });
</script>
